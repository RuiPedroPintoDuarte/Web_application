@model Cinema.Models.Historico

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Historico</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FilmeId" class="control-label"></label>
                <select asp-for="FilmeId" class ="form-control" asp-items="ViewBag.FilmeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PerfilId" class="control-label"></label>
                <select asp-for="PerfilId" class ="form-control" asp-items="ViewBag.PerfilId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
