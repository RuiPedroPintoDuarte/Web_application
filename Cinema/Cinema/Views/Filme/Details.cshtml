@model Cinema.Models.Filme

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Nome)</h1>
<hr />
<div class="row" style="float:left;">
    <dl class="column">
        <dd class="col-sm-10">
            <img src="~/Images/@Html.DisplayFor(model => model.Foto)" width="250" height="376" />
        </dd>
        <div style="margin-top:30px; font-size:20px;">
            <a asp-action="Index">Voltar</a>
        </div>
    </dl>
    <dl class="column" style="float:right">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Realizador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Realizador)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duracao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duracao)
        </dd>
        
    </dl>

</div>
<dl class="row" style="float: right; font-size: 26px;">
    @Html.ActionLink("Comprar Bilhete", "CreateFilme", "Bilhete", new { id = Model.Id }, null)
</dl>