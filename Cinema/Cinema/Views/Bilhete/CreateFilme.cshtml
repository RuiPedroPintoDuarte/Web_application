@model Cinema.Models.Bilhete

@{
    ViewData["Title"] = "Create";
}
<h4>Comprar Bilhete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFilme">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <select name="Preco" asp-for="Preco">
                    <option value="6">Adulto: 6€</option>
                    <option value="4">Estudante: 4€</option>
                </select>
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmeId" class="control-label"></label>
                <select asp-for="FilmeId" class="form-control" disabled asp-items="ViewBag.FilmeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lugar" class="control-label"></label>
                <input asp-for="Lugar" class="form-control" />
                <span asp-validation-for="Lugar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioId" class="control-label"></label>
                <select asp-for="HorarioId" class="form-control" asp-items="ViewBag.HorarioId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Comprar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="~/Filme/Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
