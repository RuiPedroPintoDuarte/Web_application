@model Exame_2022.Models.Empresa

@{
    ViewData["Title"] = "Registo";
}

<h1>Registo de nova Empresa</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logotipo" class="control-label"></label>
                <input asp-for="Logotipo" type="file" class="form-control" />
                <span asp-validation-for="Logotipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaisID" class="control-label"></label>
                <select asp-for="PaisID" class ="form-control" asp-items="ViewBag.PaisID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Registar" class="btn btn-primary" />
                <input type="submit" value="Cancelar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
